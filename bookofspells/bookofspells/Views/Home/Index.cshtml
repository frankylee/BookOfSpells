<section class="container mb-5">
    <div class="row">
        <div class="col mb-4">
            <h2 class="mb-0">Featured Spells</h2>
        </div>
        <div class="col text-right">
            <a asp-area="" asp-controller="spellbook" asp-action="index">View all spells &nbsp;&nbsp;<i class="fa fa-angle-right"></i></a>
